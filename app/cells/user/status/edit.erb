<% @model.statuses.each_with_index do |status, index| %>
  <div class = "row list">
    <div class = "col s6 item">
      <label>
        <i class = "material-icons medium-small comm-status"><%= CONFIG[:commission_icons].values[index] %></i>
        <%= CONFIG[:commission_icons].keys[index].to_s.humanize.titleize %>:
      </label>
    </div>
    <div class = "col s6 item">
      <select name = "user[statuses][<%= index %>]" class = "btn button-with-icon">
        <% CONFIG[:activity_icons].keys.each do |key| %>
          <option class = "comm-<%= key %>" value = "<%= key %>" <%= "selected = 'selected'" if status == "#{key}" %>><%= key.to_s.humanize.titleize %></option>
        <% end %>
      </select>
    </div>
  </div>
<% end %>