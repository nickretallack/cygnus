<div class = "new">
  <div class = "buttons">
    <%= form_for Attachment.new, url: attachments_path do |f| %>
      <%= f.fields_for Upload.new, multipart: true do |u| %>
        <div class = "input-field">
          <%= u.check_box :explicit %><%= u.label :explicit, "Adult Image" %>
        </div>
        <div class = "file-field image-preview bordered hc">
          <div class = "submit">
            <span>Image</span>
            <%= u.file_field :image %>
          </div>
        </div>
      <% end %>
      <%= f.hidden_field :child_model, value: @options[:child_model] %>
      <%= f.hidden_field :parent_model, value: @options[:parent_model] %>
      <%= f.hidden_field :parent_id, value: @options[:parent_id] %>
      <%= f.submit "Create Attachment", id: :save %>
    <% end %>
  </div>
</div>