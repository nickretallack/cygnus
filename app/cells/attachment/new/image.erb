<%= fields_for Image.new do |i| %>
  <div class = "padded">
    <%= i.check_box :explicit, { checked: @model.explicit } %><%= i.label :explicit, "Adult Image", id: "explicit-attachment" %>
    <div class = "file-field input-field bordered">
      <div class = "submit">
        <span>Image</span>
        <%= i.file_field :image, id: "change-attachment" %>
      </div>
    </div>
  </div>
  <div class = "image-preview" file-field = "change-attachment" explicit-label = "explicit-attachment">
    <%= cell(:image).(options[:type], @model.id) %>
    <div class = "image-labels">
      <label>Click in border to change image (any size image)</label>
      <label class = "danger">Please mark adult images explicit before saving.</label>
    </div>
  </div>
<% end %>