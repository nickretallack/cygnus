<div class = "card card-card" id = <%= @model.id %> >
  <div class = "card-content">
    <div class = "card-title">
      <div class = "hc view-mode reorder-mode">
        <h5 id = "title"><%= title_for @model %></h5>
        <hr />
      </div>

      <% if controller.can_modify? @user %>

        <div class = "edit-mode">
          <%= form_for @model, url: update_card_path(@user, @model), method: :patch, html: { class: "button-submit" } do |f| %>
            <%= f.text_field :title, placeholder: "Card Title" %>
            <%= f.text_area :description, placeholder: "Description" %>
            <%= f.submit "Save Card", id: "save" %>
          <% end %>
          <%= form_for @model, url: destroy_card_path(@user, @model), method: :delete, html: { class: "button-submit" } do |f| %>
            <%= f.submit "Delete Card", id: "delete" %>
          <% end %>
          <div class = "button-area centered"></div>

        </div>

      <% end %>
      <div class = "card-action">
      </div>
    </div>
  </div>
</div>