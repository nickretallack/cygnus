<div class = "card list-card">
  <div class = "card-content">
    <div class = "card-title">
      <h5>From: <%= @model.patron.name %></h5>
      <h5>Email: <%= @model.patron.email %></h5>
      <hr />
      <h6 class = "hc"><%= link_to "View order", show_order_path(@model) %></h6>
      <hr />
    </div>
    <div class = "card-action">
      <%= form_for @model, url: accept_order_path(@model), html: { class: "button-submit" } do |f| %>
        <%= f.submit "Accept", id: "accept" %>
      <% end %>
      <%= form_for @model, url: reject_order_path(@model), html: { class: "button-submit" } do |f| %>
        <%= f.submit "Reject", id: "reject" %>
      <% end %>
      <div class = "button-area centered"></div>
    </div>
  </div>
</div>