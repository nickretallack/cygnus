<% provide(:header, "Listing Order Forms")%>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_forms.each do |order_form| %>
      <tr>
        <td><%= order_form.content %></td>
        <td><%= order_form.user_id %></td>
        <td><%= link_to 'Show', order_form_path(@user, order_form) %></td>
        <td><%= link_to 'Destroy', order_form_path(@user, order_form), method: :delete, content: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order form', new_order_form_path %>
