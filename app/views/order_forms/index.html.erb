<% provide(:header, "Your Order Forms")%>

<div class = "row hidable max">
  <div class = "hidable-title">Create New Order Form</div>
  <div class = "input-field">
    <%= render "new" %>
  </div>
</div>

<% if @order_forms.any? %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @order_forms.each do |order_form| %>
        <tr>
          <td><%= title_for order_form: order_form %></td>
          <td><%= link_to 'Show', order_form_path(@user, order_form) %></td>
          <% if current_user.default_order_form == order_form.id %>
            <td class = "success">Default</td>
          <% else %>
            <td><%= link_to "Set as Default", default_order_form_path(current_user, order_form), title: "This is the form that anyone clicking on your order link will get.", class: "help" %></td>
          <% end %>
          <td><%= link_to 'Destroy', order_form_path(@user, order_form), method: :delete, content: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>