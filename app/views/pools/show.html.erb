<% provide(:header, @pool.user.name+"'s "+@pool.title) unless User.where(id: @pool.user_id).empty? %>

<p id="notice"><%= notice %></p>

<% if @pool.user == current_user %>
  <%= form_for Submission.new do |f| %>
    <div class="form-group">
      <%= f.label :file, "Upload New Submission" %>
      <%= f.file_field :picture, class: "uploader" %>
      <%= f.check_box :adult %> <%= f.label :adult %>
      <br />
      <%= hidden_field_tag "submission[pool_id]", @pool.id %>
      <%= f.submit "Save Submission", class: "btn btn-primary spaced" %>
    </div>
  <% end %>
<% end %>

<% @submissions.each do |submission| %>
  <%= image_tag(image_thumb_path(submission.upload.id), class: "thumbnail thumbnail-mini") %>
<% end %>