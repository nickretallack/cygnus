<% provide(:header, @pool.user.name+"'s "+@pool.title) unless User.where(id: @pool.user_id).empty? %>

<p id="notice"><%= notice %></p>

<% if can_modify? user: @pool.user %>
  <%= form_for Submission.new do |f| %>
    
    <div class = "row">
      <div class = "col s12 m6">
        <%= f.text_field :title, placeholder: "Title" %>
        <div class = "file-field input-field">
          <div class = "btn fl">
            <span>Picture</span>
            <%= f.file_field :picture %>
          </div>
        </div>
        <div class = "input-field">
          <%= f.check_box :adult %><%= f.label :adult %>
        </div>
        <%= hidden_field_tag "submission[pool_id]", @pool.id %>
        <div class = "input-field">
          <%= f.submit "New Submission" %>  
        </div>
      </div>
      <div class = "col s12 m6 preview">
      </div>
    </div>
    
  <% end %>
  <hr />
<% end %>

<div class = "row gallery">
  <% enum_for(submissions: @submissions) do |submission| %>
    <div class = "thumbnail-block">
      <%= link_to submission do %>
        <%= submission.title %>
        <%= image_for :bordered, submission.file_id %>
      <% end %>
    </div>
  <% end %>
  <% 11.times do %>
    <div class = "thumbnail-block spacer"></div>
  <% end %>
</div>