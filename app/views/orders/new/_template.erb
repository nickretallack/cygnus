<%name, content = object.first%>
<%question, options = content.first%>
<li>
  <fieldset class = "question" name = "<%= name.dasherize %>">
    <legend align = "center">. <%= question %></legend>
    <%= hidden_field "content[#{index}-#{name}][question]", nil, value: question %>
    <div class = "answer <%= name.dasherize %>"><%= render "orders/new/#{name}", options: options, index: index, name: name%></div>
  </fieldset>
</li>