<div class = "new spaced indent-<%= indent %>">
  <%= form_for Message.new, url: new_comment_path(@submission, model), html: { class: "remote button-submit" } do |f| %>
    <% if model %>
      <p class = "ic">Replying to <%= model.comment_author.name %>:</p>
    <% end %>
    <%= f.text_area :content, placeholder: "Your comment here" %>
    <blockquote></blockquote>
    <%= f.submit "Comment", id: "comment" %>
    <%= f.submit "Preview", id: "preview_comment" %>
  <% end %>
  <% render "partials/markdown_cheatsheet" %>
  <div class = "button-area centered-small padded"></div>
</div>