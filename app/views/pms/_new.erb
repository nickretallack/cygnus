<div class = "new spaced">
  <%= form_for Message.new, url: new_pm_path(@user, model), html: { class: "button-submit" } do |f| %>
    <% if model.instance_of? User %>
      <p class = "ic padded">Starting a new conversation with <%= model.name %>:</p>
    <% end %>
    <%= f.text_field :subject, placeholder: "Subject" if model.instance_of? User %>
    <%= f.text_area :content, placeholder: "Your message here" %>
    <blockquote></blockquote>
    <%= render "partials/markdown_cheatsheet" %>
    <%= f.submit "Send", id: "pm" %>
    <%= f.submit "Preview", id: "preview_pm" %>
  <% end %>
  <div class = "button-area centered-small padded"></div>
</div>