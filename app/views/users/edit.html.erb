<% provide(:title, 'Edit Profile') %>
<h1>Edit Profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, method: :patch, url: user_path do |f| %>
      <%= render 'fields', f: f %>
      <%= f.submit "Save Changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
