      <%= render 'shared/error_messages' %>

  <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :class => 'form-control' %>
  </div>

  <div class="form-group">
      <%= f.label :file %>
      <%= f.file_field :picture, :class => 'form-control' %>
      <% if !@user.upload.nil? %>      
        <%= f.check_box("avatar_check", :checked => false) %> Check if you want to change your avatar from: 
        <%= image_tag(image_thumb_path(@user.upload.id)) %>
      <% end %>
  </div>

  <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, :class => 'form-control'  %>
  </div>
  <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, :class => 'form-control'  %>
  </div>
  <div class="form-group">
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, :class => 'form-control'  %>
  </div>
  <div class="form-group">
      <%= f.label :gallery %>
      <%= f.text_field :gallery, :class => 'form-control'  %>
  </div>

  <div class="form-group">
      <%= f.label :price, "Price Range of Products" %>
      <%= f.text_field :price, :class => 'form-control'  %>
  </div>
  <div class="form-group">
      <%= f.label :details, "About" %>
      <%= f.text_area :details, :class => 'form-control'  %>
  </div>
  <div class="form-group">
      <%= f.label :tags, "Specialties, tags to be searched by" %>
      <%= f.text_field :tags, :class => 'form-control'  %>
  </div>
  <div class="checkbox">
    <label>
      <%= f.check_box :commissions %> Commissions
    </label>
    <label>
      <%= f.check_box :trades %> Trades
    </label>
    <label>
      <%= f.check_box :requests %> Requests
    </label>
  </div>
 
