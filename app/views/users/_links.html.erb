<div class = "col s6">
  <% if can_watch? user %>
    <% if watching? user %>
      <blockquote class = "inline success link truncate"><%= link_to "Watch", watch_user_path(user) %></blockquote>
    <% else %>
      <blockquote class = "inline danger link truncate"><%= link_to "Unwatch", watch_user_path(user) %></blockquote>
    <% end %>
  <% else %>
    <% if anon? %>
      <% unless user.at_least(:blocked) %>
        <blockquote class = "inline danger link">Unactivated</blockquote>
      <% else %>
        <blockquote class = "inline link"><%= link_to "Profile", user_path(user) %></blockquote>
      <% end %>
    <% else %>
      <blockquote class = "inline link"><%= link_to "Financial" %></blockquote>
    <% end %>
  <% end %>
  <% if user.pools.any? %>
    <blockquote class = "inline link"><%= link_to "Gallery", gallery_path(user) %><%= link_to "(ies)", pools_path(user) %></blockquote>
  <% else %>
    <blockquote class = "inline danger link">No Pools</blockquote>
  <% end %>
  <blockquote class = "inline link"><%= link_to "Workboard", cards_path(user.name) %></blockquote>
</div>
<div class = "col s6">
  <% if current_user? user %>
    <blockquote class = "inline link"><%= link_to "PMs", pms_path(current_user.name) %></blockquote>
  <% else %>
    <blockquote class = "inline link"><%= link_to "PM", pms_path(current_user.name, user.name) %></blockquote>
  <% end %>
  <blockquote class = "inline link"><%= link_to "Order" %></blockquote>
  <blockquote class = "inline link"><%= link_to "Activity", messages_path(user) %></blockquote>
</div>