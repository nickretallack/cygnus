<div class = "col s6">
  <div id = "watch">
    <%= render "watch_link", user: user %>
  </div>
  <% if user.pools.any? %>
    <blockquote class = "inline link"><%= link_to "Gallery", gallery_path(user) %><%= link_to "(ies)", pools_path(user) %></blockquote>
  <% else %>
    <blockquote class = "inline danger link">No Pools</blockquote>
  <% end %>
  <blockquote class = "inline link"><%= link_to "Workboard", cards_path(user.name) %></blockquote>
</div>
<div class = "col s6">
  <% if current_user? user %>
    <blockquote class = "inline link"><%= link_to "Conversations", pms_path(current_user.name) %></blockquote>
  <% else %>
    <blockquote class = "inline link"><%= link_to "PM", pms_path(current_user.name, user.name) %></blockquote>
  <% end %>
  <% if user.default_order_form and not current_user? user %>
    <blockquote class = "inline link success"><%= link_to "Order", order_form_path(user, user.default_order_form) %></blockquote>
  <% else %>
    <blockquote class = "inline link danger">Order</blockquote>
  <% end %>
  <blockquote class = "inline link"><%= link_to "Activity", messages_path(user) %></blockquote>
</div>