<% @users.each do |user| %>
  <div class = "row">
    <hr />
    <div class = "row">
      <div class = "col s12 m6">
        <div class = "fl thumb-large">
          <%= link_to avatar_for(user, type: :thumb), user_path(user) %>
        </div>
        <div class = "fl">
          <h4 class = "truncate"><%= link_to user.name, user_path(user) %></h4>
          <h4><%= statuses user, verbosity: :condensed %></h4>
          <% if user.galleries.first %>
            <span><%= link_to "Gallery", gallery_path(user) %><%= link_to "(ies)", pools_path(user) %></span>
          <% end %>
        </div>
      </div>
      <div class = "col s9 m6">
        <blockquote><%= user.price %></blockquote>
        <blockquote><%= user.tags %></blockquote>
      </div>
    </div>
  </div>
<% end %>
