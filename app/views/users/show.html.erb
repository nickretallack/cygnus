<% provide(:header, @user.name) %>
<div class="container" id="detach-point">
	<div class="row">
		<div class="col-sm-9">
			<div id="avatar">
		    	<%= image_tag(image_thumb_path(@user.upload.id), class: "thumbnail", ) if !@user.upload.nil? %>
		    </div>
		</div>
		<div class="col-sm-3">
			<div class="row">
				<div class="col-xs-12">
					<div id="offsiteGallery">
						<%= link_to @user.gallery, url_with_protocol(@user.gallery) %>
					</div>
				</div>
				<div class="col-xs-12">
					<div id="statuses">
						<%= comm_statuses_verbose(@user) %>
					</div>
				</div>
				<div class="col-xs-12">
					<div id="prices">
						<%if !@user.price.blank?%>
							<h6><%=@user.price%></h6>
						<%end%>
					</div>
				</div>
				<div class="col-xs-12">
					<div id="since">
						<h6>Member Since: <%=Date.parse(@user.created_at.to_s) %></h6>
					</div>
				</div>
			    <%if current_user.is_mod_or_higher?%>
				<div class="col-xs-12">
					<div id="last">
						<h6>Last Login: <%=Date.parse(@user.created_at.to_s) %></h6>
					</div>
				</div>
			    <%end%>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12">
			<div id="description">
				<%= render_markdown(@user.details) %>
			</div>
		</div>
	</div>
</div>

<div id="attach-point"></div>
