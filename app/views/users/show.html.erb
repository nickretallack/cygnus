<% provide(:header, @user.name) %>

<% provide(:extrascript, javascript_include_tag(controller_name+".show")) %>

<div class="row">
	<div class="col-sm-3" style="margin-top: 2%;">
	  <%= image_tag(image_thumb_path(@user.upload.id), class: "thumbnail") unless @user.upload.nil? %>
	</div>
	<div class="col-sm-9" style="margin-left: -5%;">
		<div class="row">
			<div class="col-xs-12">
				<span><%= link_to "Gallery", pool_path(Pool.find_by(user_id: @user.id)) %><%= link_to "(ies)", pools_path(user_id: @user.id) %></span>
			</div>
			<div class="col-xs-12">
				<div id="statuses">
					<%= comm_statuses_verbose(@user) %>
				</div>
			</div>
			<div class="col-xs-12">
				<div id="offsiteGallery">
					<%= link_to @user.gallery, url_with_protocol(@user.gallery) %>
				</div>
			</div>
			<div class="col-xs-12">
				<div id="prices">
					<%if !@user.price.blank?%>
						I charge:&nbsp;<%=@user.price%>
					<%end%>
				</div>
			</div>
			<div class="col-xs-12">
				<div id="since">
					Member Since: <%= Date.parse(@user.created_at.to_s).to_formatted_s(:long_ordinal) %>
				</div>
			</div>
		    <%if current_user.is_mod_or_higher?%>
			<div class="col-xs-12">
				<div id="last">
					Last Login: <%=Date.parse(@user.created_at.to_s) %>
				</div>
			</div>
		    <%end%>
		</div>
	</div>
</div>
<p>
<div class="row">
	<div class="col-sm-12">
		<div id="description">
			<%= render_markdown(@user.details) %>
		</div>
	</div>
</div>
</p>

<div id="attach-point"></div>
