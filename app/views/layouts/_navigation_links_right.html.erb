<%# add navigation links to this file %>
<% if !current_user.is_anonymous? %>
  <li class="dropdown">
    <a class="dropdown-toggle" aria-expanded="false" role="button" data-toggle="dropdown" href="#">
      <%= current_user.name %>
      <span class="caret"></span>
    </a>
    <ul class="dropdown-menu pull-right">
      <li><%= link_to "Galleries", pools_path(user_id: current_user) %></li>
      <li><%= link_to "Order Forms", order_forms_path() %></li>
      <li><%= link_to "Workboard", workboard_path(current_user) %></li>
      <li class="divider"></li>
      <li><%= link_to "Profile", user_path(current_user) %></li>
      <li class="divider"></li>
      <li><%= link_to "Log out", logout_path, method: "delete" %></li>
    </ul>
  </li>
<% else %>
  <li><%= link_to "Reset Password", password_reset_path %></li>
  <li class="dropdown">
    <a class="dropdown-toggle" aria-expanded="false" role="button" data-toggle="dropdown" href="#">
      <%= "Log In / Register" %>
      <span class="caret"></span>
    </a>
      <ul class="dropdown-menu pull-right" style="min-width: 200px;">
        <%= form_for(:session, url: login_path, class: "navbar-form navbar-right") do |f| %>
          <li class = "centered">
            <%= f.text_field :name, class: "wide-90", placeholder: 'Username' %>
          </li>
          <li class = "centered">
            <%= f.password_field :password, class: "wide-90", placeholder: 'Password' %>
          </li>
          <hr />
          <li class = "centered">
            <%= f.submit "Log in", class: "submit" %><br>
          </li>
        <% end %>
        <div class = "wide-100 centered"><h4>or</h4></div>
        <%= form_for User.new do |f| %>
          <li class = "centered">
            <%= f.text_field :name, class: "wide-90", placeholder: "Username" %>
          </li>
          <li class = "centered">
            <%= f.email_field :email, class: "wide-90", placeholder: "Email" %>
          </li>
          <li class = "centered">
            <%= f.password_field :password, class: "wide-90", placeholder: "Password" %>
          </li>
          <li class = "centered">
            <%= f.password_field :password_confirmation, class: "wide-90", placeholder: "Password Confirmation" %>
          </li>
          <hr />
          <li class = "centered">
            <%= f.submit "Register", class: "submit" %>
          </li>
        <% end %>
      </ul>
  </li>
<% end %>

