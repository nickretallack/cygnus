<div class = "row hc">
  <span>
    <%= link_to pool_path(params["pool_#{Pool.slug}"]), title: "Back to Pool" do %>
      <i class = "material-icons medium-small"><%= CONFIG[:submission_icons][:pool] %></i>
    <% end %>
    <% if @submission.upload %>
      <div class = "vdiv"></div>
      <%= link_to download_path(@submission.upload.id), title: "Download" do %>
        <i class = "material-icons medium-small"><%= CONFIG[:submission_icons][:download] %></i>
      <% end %>
      <div id = "favorite">
        <%= render "favorite_link" %>
      </div>
    <% end %>
  </span>
</div>
<div class = "row limit-height">
  <div class = "col expandable hc">
    <%= cell(:image).(:full, (@submission.upload.id rescue -1)) %>
  </div>
</div>
<% hidable "Description", true do %>
  <%= @submission.description %>
<% end %>
<div class = "row" id = "messages">
  <%#= cell(:message, @comments).(:index, type: :full) %>
</div>
<hr />
<%#= cell(:message).(:new) %>