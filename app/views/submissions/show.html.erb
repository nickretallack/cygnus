<% provide :header, @submission.title %>

<div class = "row hc">
  <span>
    <%= link_to "Pool", pool_path(@submission.pool.id) %>
    <div class = "vdiv"></div>
    <%= link_to "Download", download_path(@submission.file_id) %>
    <%= render "favorite_link" %>
  </span>
</div>
<div class = "row hc limit-height">
  <%= image_for :full, @submission.file_id %>
</div>
<div class = "row">

</div>
<div class = "row">
  <% @comments.each do |comment| %>
    <%= render "messages/show", message: comment %>
  <% end %>
  <hr />
  <%= render "messages/new" %>
</div>